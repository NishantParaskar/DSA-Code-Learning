    public int maximumDifference(int[] nums) {
        // Initialize min to the first element and maxDiff to -1
        int min = nums[0];
        int maxDiff = -1;

        // Loop through the array starting from the second element
        for (int i = 1; i < nums.length; i++) {
            // If the current element is greater than min, calculate the difference
            if (nums[i] > min) {
                maxDiff = Math.max(maxDiff, nums[i] - min);
            } else {
                // Update min if current element is smaller
                min = nums[i];
            }
        }

        // Return the maximum difference found or -1 if no such pair exists
        return maxDiff;
    }

    public static void main(String[] args) {
        Solution sol = new Solution();

        // Test cases
        int[] testCase1 = {7, 1, 5, 4};
        int[] testCase2 = {9, 4, 3, 2};
        int[] testCase3 = {1, 5, 2, 10};
        int[] testCase4 = {1, 2, 3, 4, 5};
        int[] testCase5 = {5, 1, 2, 10, 9};

        // Print the results of the test cases
        System.out.println("Maximum Difference (TestCase1): " + sol.maximumDifference(testCase1)); // Expected: 4
        System.out.println("Maximum Difference (TestCase2): " + sol.maximumDifference(testCase2)); // Expected: -1
        System.out.println("Maximum Difference (TestCase3): " + sol.maximumDifference(testCase3)); // Expected: 9
        System.out.println("Maximum Difference (TestCase4): " + sol.maximumDifference(testCase4)); // Expected: 4
        System.out.println("Maximum Difference (TestCase5): " + sol.maximumDifference(testCase5)); // Expected: 9
    }
}
